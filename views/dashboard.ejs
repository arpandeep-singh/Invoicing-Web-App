  <script>
    const addCustomerForm = document.getElementById('addCustomerForm');
    const customerFormAlert = document.getElementById('customerFormAlert');

    const resetCustomerFormData = () => {
      document.getElementById('customerFirstName').value = '';
      document.getElementById('customerLastName').value = '';
      document.getElementById('customerEmail').value = '';

      customerFormAlert.style.display = 'none';
      customerFormAlert.innerHTML = '';
    }

    const handleFormSubmit = async (e) => {
      e.preventDefault();

      customerFormAlert.innerHTML = '';
      customerFormAlert.style.display = 'none';

      const URL = '/api/customers/add';

      const firstName = document.getElementById('customerFirstName').value;
      const lastName = document.getElementById('customerLastName').value;
      const email = document.getElementById('customerEmail').value;
      const task = document.getElementById('customerTask').value;
      const price = document.getElementById('customerPrice').value;
      const dueDate = document.getElementById('dueDateChart').value;

      const payload = {
        firstName,
        lastName: lastName == '' || !lastName ? undefined : lastName,
        email,
        task,
        price,
        dueDate,
      }

      const options = {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(payload),
      }

      try {
        const response = await (await fetch(URL, options)).json();
        if (response.error) {
          const errorMessage = document.createTextNode(response.error);
          customerFormAlert.style.display = 'block';
          customerFormAlert.classList.remove('alert-success')
          customerFormAlert.classList.add('alert-danger');
          customerFormAlert.appendChild(errorMessage);
        } else if (!response.error && response.message == 'success') {
          const message = document.createTextNode(response.message);
          customerFormAlert.style.display = 'block';
          customerFormAlert.classList.remove('alert-danger')
          customerFormAlert.classList.add('alert-success');
          customerFormAlert.appendChild(message);

          window.location.reload()
        }

      } catch (error) {
        console.log('Some Error Occured')
      }
      finally {
        // setTimeout(resetCustomerFormData, 4000)
      }


    }

    addCustomerForm.addEventListener('submit', handleFormSubmit);
  </script>
